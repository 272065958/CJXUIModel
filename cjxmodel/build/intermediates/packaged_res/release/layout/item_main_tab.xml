<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="@dimen/block_line_height">

    <ImageView
        android:id="@+id/main_tab_icon"
        android:layout_width="@dimen/tab_icon_size"
        android:layout_height="@dimen/tab_icon_size"
        android:layout_marginTop="@dimen/text_margin"
        android:layout_gravity="center_horizontal"/>

    <TextView
        android:id="@+id/main_tab_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/tab_text_top_margin"
        android:layout_gravity="center_horizontal"
        android:textColor="@color/cjx_text_title_color"
        android:textSize="@dimen/tab_text_size" />
</FrameLayout>